{
  "name": "mitchellsimoens-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run sitemap:gen && next export",
    "lint-staged": "lint-staged",
    "lint": "npm run lint:eslint && npm run lint:prettier -- --check",
    "lint:eslint": "eslint --max-warnings=0 '*.{json,js,jsx,ts,tsx}' 'components/**/*.{js,jsx,ts,tsx}' 'content/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' 'pages/**/*.{js,jsx,ts,tsx}' 'state/**/*.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier '*.{json,js,jsx,ts,tsx}' 'components/**/*.{js,jsx,ts,tsx}' 'content/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' 'pages/**/*.{js,jsx,ts,tsx}' 'state/**/*.{js,jsx,ts,tsx}'",
    "postbuild": "npm run redirects:gen && npm run redirects:copy",
    "redirects:copy": "cp _redirects out/_redirects",
    "redirects:gen": "node gen-redirects.js",
    "sitemap:gen": "next-sitemap",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/bin/**/*.{js,jsx,ts,tsx},packages/**/src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:eslint -- --fix",
      "npm run lint:prettier -- --write",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.35",
    "@fortawesome/free-brands-svg-icons": "5.15.3",
    "@fortawesome/free-solid-svg-icons": "5.15.3",
    "@fortawesome/react-fontawesome": "0.1.14",
    "@mdx-js/loader": "1.6.22",
    "@mdx-js/react": "1.6.22",
    "@next/mdx": "11.0.1",
    "classnames": "2.3.1",
    "date-fns": "2.22.1",
    "gray-matter": "4.0.3",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-image": "4.0.3",
    "react-intersection-observer": "8.32.0",
    "react-twitter-embed": "3.0.3",
    "remark": "13.0.0",
    "remark-emoji": "2.2.0",
    "remark-html": "13.0.1",
    "remark-images": "2.0.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "0.2.1",
    "@tailwindcss/jit": "0.1.18",
    "@tailwindcss/typography": "0.4.1",
    "@types/mime": "2.0.3",
    "@types/node": "16.3.1",
    "@types/react": "17.0.14",
    "autoprefixer": "10.3.1",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.1",
    "globby": "11.0.4",
    "husky": "7.0.1",
    "lint-staged": "11.0.1",
    "mime": "2.5.2",
    "next-sitemap": "1.6.140",
    "postcss": "8.3.5",
    "prettier": "2.3.2",
    "reading-time": "1.3.0",
    "remark-oembed": "1.2.2",
    "remark-prism": "1.3.6",
    "string-strip-html": "8.3.0",
    "strip-markdown": "4.0.0",
    "tailwindcss": "2.2.4",
    "typescript": "4.3.5",
    "unist-util-visit": "2.0.3"
  }
}
