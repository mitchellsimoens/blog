{
  "name": "mitchellsimoens-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run sitemap:gen && next export",
    "lint-staged": "lint-staged",
    "lint": "npm run lint:eslint && npm run lint:prettier -- --check",
    "lint:eslint": "eslint --max-warnings=0 '*.{json,js,jsx,ts,tsx}' 'components/**/*.{js,jsx,ts,tsx}' 'content/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' 'pages/**/*.{js,jsx,ts,tsx}' 'state/**/*.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier '*.{json,js,jsx,ts,tsx}' 'components/**/*.{js,jsx,ts,tsx}' 'content/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' 'pages/**/*.{js,jsx,ts,tsx}' 'state/**/*.{js,jsx,ts,tsx}'",
    "postbuild": "npm run redirects:gen && npm run redirects:copy",
    "redirects:copy": "cp _redirects out/_redirects",
    "redirects:gen": "node gen-redirects.js",
    "sitemap:gen": "next-sitemap",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/bin/**/*.{js,jsx,ts,tsx},packages/**/src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:eslint -- --fix",
      "npm run lint:prettier -- --write",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/free-solid-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.16",
    "@mdx-js/loader": "1.6.22",
    "@mdx-js/react": "1.6.22",
    "@next/mdx": "12.0.7",
    "classnames": "2.3.1",
    "date-fns": "2.28.0",
    "gray-matter": "4.0.3",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-image": "4.0.3",
    "react-intersection-observer": "8.33.1",
    "react-twitter-embed": "3.0.3",
    "remark": "14.0.2",
    "remark-emoji": "3.0.2",
    "remark-html": "15.0.1",
    "remark-images": "3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/jit": "0.1.18",
    "@tailwindcss/typography": "0.5.0",
    "@types/mime": "2.0.3",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "autoprefixer": "10.4.2",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.7",
    "globby": "12.0.2",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "mime": "3.0.0",
    "next-sitemap": "1.6.261",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "reading-time": "1.5.0",
    "remark-oembed": "1.2.2",
    "remark-prism": "1.3.6",
    "string-strip-html": "9.1.4",
    "strip-markdown": "5.0.0",
    "tailwindcss": "3.0.12",
    "typescript": "4.5.4",
    "unist-util-visit": "4.1.0"
  }
}
